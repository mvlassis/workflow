# Lock screen mode
set $Locker $HOME/.config/i3/i3lock-solarized.sh && sleep 1

# set $mode_system System (l) lock, (e) logout, (s) shutdown, (h) hibernate, (r) reboot
set $system_mode System Mode (s) (r) (l) (e) (h)
mode "$system_mode" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
	bindsym F12 mode "default"
}

bindsym $mod+End mode "$system_mode"
bindsym F12 mode "$system_mode"
bindsym XF86Calculator mode "$system_mode"
